{% extends 'base.html.twig' %}

{% block title %}Inscription - {{ parent() }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="header">
            <h1 class="display-5" style="margin: 3rem 0">Inscription</h1>
        </div>

         {{ form_start(form) }}
         <div class="form-row">
            {{ form_errors(form) }}
            <div class="form-group col-12">
                {{ form_label(form.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'col-form-label'}}) }}
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.username) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'col-form-label'}}) }}
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.lastname) }}
            </div>
            <div class="form-group col-md-6">
                {{ form_label(form.firstname, 'Pr√©nom', {'label_attr': {'class': 'col-form-label'}}) }}
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.firstname) }}
            </div>
            <div class="form-group col-12">
                {{ form_label(form.email, 'Email', {'label_attr': {'class': 'col-form-label'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.email) }}
            </div>
            <div class="form-group col-12">
                {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'col-form-label'}}) }}
                {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.password) }}
            </div>
         </div>
         <div class="form-group text-right">
            <button type="submit" class="btn btn-primary">S'enregistrer</button>
         </div>
         {{ form_end(form) }}
    </div>

{% endblock %}
