{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - {{ parent() }}{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-4">
                {% for img in product.images %}
                    <img src="{{ img.link }}" alt="{{ img.alt }}" class="img-fluid" style="margin:20px;width:auto;height:300px;border:2px solid gray">
                {% endfor %}
            </div>
            <div class="col-md-8" style="padding:20px">
                <h1>{{ product.name }}</h1>
                <p>Description : {{ product.description }}</p>
                <p>Dimensions : {{ product.size }}.</p>
                <p>Poids : {{ product.weight }}.</p>
                <p>Prix : {{ product.price }} â‚¬</p>
                <p>Couleurs :</p>
                <ul>
                    {% for color in product.colors %}
                        <li style="list-style-type:none;"><div style="height:3rem;width:3rem;background-color:{{ color.hex_code }};margin-bottom:1rem;border: 1px solid gray"></div></li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12" style="text-align:right">
                <a href="{{ path ('products') }}" class="btn btn-primary" id="password" name="Retour">Retour</a>
            </div>
        </div>
    </div>
    
{% endblock %}
